@model Lab21.Models.UserInfo
@{
    ViewBag.Title = "editUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editing Table</h2>

<form action="/Home/UserChanges" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" for="firstName">First Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.FirstName, new {value = Model.FirstName, placeholder="First Name", @class = "form-control" } )
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="firstName">Last Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.LastName, new { value = Model.LastName, placeholder = "First Last", @class = "form-control" })
        </div>
    <label class="control-label col-sm-2" for="firstName">Phone:</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(a => a.Phone, new { value = Model.Phone, placeholder = "Phone", @class = "form-control" })
    </div>
</div><div class="form-group">
    <label class="control-label col-sm-2" for="firstName">Birthday:</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(a => a.Birthday, new { value = Model.Birthday, placeholder = "Birthday", @class = "form-control" })
    </div>
</div><div class="form-group">
    <label class="control-label col-sm-4" for="firstName">Mothers Maiden Name:</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(a => a.MothersName, new { value = Model.MothersName, placeholder = "Mothers Name", @class = "form-control" })
    </div>
</div>
    @Html.HiddenFor(a => a.UserID)
    @Html.HiddenFor(a => a.Email)
      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-success">Submit</button>
          </div>
      </div>
</form>
